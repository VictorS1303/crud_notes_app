<i class="fas fa-trash-can delete-all-notes-button" id="delete_all_notes_button"></i>


<style>
    .delete-all-notes-button
    {
        font-size: 25px;
        cursor: pointer;
        color: #f00;
    }

    .delete-all-notes-button:active
    {
        transform: scale(.98);
    }
</style>

<script>
    const deleteAllNotesButton = document.getElementById('delete_all_notes_button')
    const notesInnerContainer = document.getElementById('notes_inner_container')
    const totalNotesNumber = document.getElementById('total_notes_number')

    deleteAllNotesButton.addEventListener('click', deleteAllNotes)

    function deleteAllNotes()
    {
        while(notesInnerContainer.firstChild)
        {
            notesInnerContainer.firstChild.remove()
        }

        totalNotesNumber.textContent = '0'
    }
</script>