<i class="fas fa-trash-can button delete-single-note-button" id="delete_single_note_button"></i>


<style>
    #delete_single_note_button
    {
        display: none;
        position: absolute;
        bottom: 20px;
        cursor: pointer;
    }
</style>

<script>
    const note = document.querySelector('.note')
    const deleteSingleNoteButton = document.querySelector('#delete_single_note_button')

    deleteSingleNoteButton.addEventListener('click', (e) => deleteSingleNote(e))

    function deleteSingleNote(e)
    {
        e.target.closest('.note').remove()
    }
</script>