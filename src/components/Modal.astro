---
import ModalTitleInput from './ModalTitleInput.astro'
---

<div class="container modal-container" id="modal_container">
    <ModalTitleInput maxlength="20"/>
</div>


<style>
    .modal-container
    {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        height: 500px;
        width: 400px;
        box-shadow: var(--box-shadow);
        background-color: #fff;
        border-radius: calc(var(--base-border-radius))
    }
</style>